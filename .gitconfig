	status = auto
	branch = auto
	ui = auto

[alias]
        a = add
        am = amend
        ama = "amend -a"
        br = branch
        branch-exists = "!f() { \
          git show-ref --verify --quiet refs/heads/$1; \
        }; f"
        ci = commit
        cia = "ci -a"
        co = checkout
        d = diff
        f = "!git fetch --all; git fetch --tags --force"
        fixup = cia --amend
        fr = full-rebase
        fu = fixup
        full-rebase = "!f() { \
          set -euxo pipefail; \
          branch=$(git what-branch); \
          parent=${1:-$(git primary-branch)}; \
          git co \"$parent\"; \
          git upstream; \
          git co \"$branch\"; \
          git rebase \"$parent\"; \
        }; f"
        g = grep
        h = hist
        hist = "log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
        low = !echo '___________________ ____ __________   ____  __.\n\\_   ___ \\______   \\    |   \\      \\ |    |/ _|\n/    \\  \\/|       _/    |   /   |   \\|      <\n\\     \\___|    |   \\    |  /    |    \\    |  \\\n \\______  /____|_  /______/\\____|__  /____|__ \\\n        \\/       \\/                \\/        \\/\n     ____.____ ___.____________ ___________\n    |    |    |   \\   \\_   ___ \\\\_   _____/\n    |    |    |   /   /    \\  \\/ |    __)_\n/\\__|    |    |  /|   \\     \\____|        \\\n\\________|______/ |___|\\______  /_______  /\n                              \\/        \\/'
        nb = new-branch
        new-branch = "!f() { \
          set -euxo pipefail; \
          git co \"${2:-$(git primary-branch)}\"; \
          git up; \
          git co -b \"$1\"; \
        }; f"
        nuke = "!f() { \
          set -euo pipefail; \
          git up; \
          git clean -dffx; \
          git gc; \
        }; f"
        onward = "!f() { \
          git fixup; \
          git rc; \
        }; f"
        p = push
        pf = "push -f"
        primary-branch = "!f() { \
          set -euo pipefail; \
          for candidate in master main devel; do \
            if git branch-exists \"$candidate\"; then \
              echo \"$candidate\"; \
              exit 0; \
            fi; \
          done; \
          echo \"No primary branch found\" 1>&2; \
          exit 1; \
        }; f"
        pu = "pull --rebase --ff-only"
        pull-push = "!git pu; git p"
        # we frequently have local changes to dotfiles, so this makes
        # it easier to pull and push commits
        pulldot = "!f() { \
          set -euo pipefail; \
          git stash; \
          git p; \
          git stash apply; \
        }; f"
        pushdot = "!f() { \
          set -euo pipefail; \
          git stash; \
          git pull-push; \
          git stash apply; \
        }; f"
        r = rebase
        rc = "rebase --continue"
        rebase-branch = "!f() { \
          set -euo pipefail; \
          git co \"$1\"; \
          rebase-push; \
        }; f"
        rebase-push = "!f() { \
          set -euxo pipefail; \
          git full-rebase \"${1:-}\"; \
          git push -f; \
        }; f"
        rp = rebase-push
        rename-branch = "!f() { \
          set -exuo pipefail; \
          git co \"$1\"; \
          git co -b \"$2\"; \
          git branch -D \"$1\"; \
        }; f"
        ri = "rebase -i"
        rim = "rebase -i \"$(git primary-branch)\""
        root = "rev-parse --show-toplevel"
        rH = "reset HEAD"
        s = st
        sh = show
        sH = show HEAD
        st = status
        status = "status --show-stash"
        u = up
        up = upstream
        upstream = "!git remote -v | grep -q dotfiles || ( git reset --hard @{upstream}; git f; git pu )"
        what-branch = "!git branch --no-color 2> /dev/null | sed -e '/^[^*]/d; s/^* //;'"

