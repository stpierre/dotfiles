#!/bin/zsh -ex

name="$1"

if screen -ls | grep -q '\.'"$name"'[[:space:]]'; then
    # rejoin existing screen
    screen -dr "$name"
else
    # create new screen
    screen -dm -S "$name"
    for i in $(seq 0 4); do
        screen -S "$name" -p $i -X stuff "workon $name"$'\n'
    done
    screen -S "$name" -p 0 -X stuff "screen_title py; ptpython"$'\n'
    screen -dr "$name"
fi
