#!/bin/zsh

if [[ -e ~/Library/Caches ]]; then
    export PIP_DOWNLOAD_CACHE=~/Library/Caches/pip_downloads
else
    export PIP_DOWNLOAD_CACHE=~/.pip_downloads
fi

clean_pyc() {
    if [[ -z $1 ]]; then
        dir=$(pwd)
    else
        dir=$1
    fi
    find "$dir" -name __pycache__ -o -name .mypy_cache -o -regex '.+\.py[co]$' \
         -delete
}
